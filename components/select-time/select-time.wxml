<view>
    <scroll-view scroll-x class="timeline scroll-view_H">
        <view class="day {{item.day === selectDay ? 'active' : ''}}"
              wx:for="{{days}}"
              wx:key="{{item}}"
              bindtap="selectDay"
              data-day="{{item.day}}">
            {{item.title}}
        </view>
    </scroll-view>
</view>